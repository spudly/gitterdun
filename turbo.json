{
  "$schema": "https://turbo.build/schema.json",
  "noUpdateNotifier": true,
  "globalEnv": [
    "DB_PATH",
    "NODE_ENV",
    "TEST_ENV",
    "PORT",
    "LOG_LEVEL",
    "PINO_PRETTY",
    "JEST_WORKER_ID",
    "CI",
    "PLAYWRIGHT_SKIP_WEBSERVER",
    "MODE"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "*.config.{ts,tsx,js,jsx,json,css}"
      ],
      "outputs": ["dist/**", "build/**", "lib/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "jest.config.js",
        "$TURBO_ROOT$/jest.config.base.cjs",
        "$TURBO_ROOT$/packages/*/package.json"
      ],
      "outputs": ["coverage/**"]
    },
    "start:dev": {"dependsOn": ["^build"], "cache": false, "persistent": true},
    "type-check": {"dependsOn": ["^build"], "cache": false},
    "//#prettier:check": {"cache": false},
    "//#knip": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "$TURBO_ROOT$/knip.config.ts",
        "$TURBO_ROOT$/package.json",
        "$TURBO_ROOT$/packages/*/package.json"
      ]
    },
    "//#lint-staged": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx,json,css}",
        "**/dist/**",
        "$TURBO_ROOT$/eslint.config.ts"
      ]
    },
    "//#lint:changed": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx,json,css}",
        "**/dist/**",
        "$TURBO_ROOT$/eslint.config.ts"
      ]
    },
    "//#test:changed": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "**/dist/**",
        "jest.config.js",
        "$TURBO_ROOT$/jest.config.base.cjs",
        "$TURBO_ROOT$/packages/*/package.json"
      ]
    },
    "ci:check": {
      "dependsOn": ["//#knip", "build", "test", "lint", "//#prettier:check"]
    },
    "ai:check": {
      "dependsOn": [
        "//#knip",
        "build",
        "//#test:changed",
        "//#lint:changed",
        "//#prettier:check"
      ]
    }
  }
}
