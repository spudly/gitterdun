{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "*.config.{ts,tsx,js,jsx,json,css}"
      ],
      "outputs": ["dist/**", "build/**", "lib/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{ts,tsx,js,jsx,json,css}", "eslint.config.mjs"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{ts,tsx,js,jsx,json,css}", "jest.config.js"],
      "outputs": ["coverage/**"]
    },
    "dev": {"dependsOn": ["^build"], "cache": false, "persistent": true},
    "//#prettier:check": {"cache": false},
    "ci:check": {"dependsOn": ["build", "lint", "//#prettier:check", "test"]}
  }
}
