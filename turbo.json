{
  "$schema": "https://turbo.build/schema.json",
  "noUpdateNotifier": true,
  "globalEnv": [
    "DB_PATH",
    "NODE_ENV",
    "TEST_ENV",
    "PORT",
    "LOG_LEVEL",
    "PINO_PRETTY",
    "JEST_WORKER_ID",
    "CI",
    "PLAYWRIGHT_SKIP_WEBSERVER",
    "MODE",
    "DEBUG",
    "PG_HOSTNAME",
    "PG_PORT",
    "PG_DATABASE",
    "PG_USERNAME",
    "PG_PASSWORD",
    "PG_URL",
    "POSTGRES_PSQL_COMMAND"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "*.config.{ts,tsx,js,jsx,json,css}"
      ],
      "outputs": ["dist/**", "build/**", "lib/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "jest.config.js",
        "$TURBO_ROOT$/jest.config.base.cjs",
        "$TURBO_ROOT$/packages/*/package.json"
      ],
      "outputs": ["coverage/**"]
    },
    "start:dev": {"dependsOn": ["^build"], "cache": false, "persistent": true},
    "check:types": {"dependsOn": ["^build"], "cache": false},
    "//#check:prettier": {"cache": false},
    "//#knip": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "$TURBO_ROOT$/knip.config.ts",
        "$TURBO_ROOT$/package.json",
        "$TURBO_ROOT$/packages/*/package.json"
      ]
    },
    "//#lint-staged": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx,json,css}",
        "**/dist/**",
        "$TURBO_ROOT$/eslint.config.ts"
      ]
    },
    "//#lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx,json,css}",
        "**/dist/**",
        "$TURBO_ROOT$/eslint.config.ts"
      ]
    },
    "//#lint:changed": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx,json,css}",
        "**/dist/**",
        "$TURBO_ROOT$/eslint.config.ts"
      ]
    },
    "//#test:changed": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,css}",
        "**/dist/**",
        "jest.config.js",
        "$TURBO_ROOT$/jest.config.base.cjs",
        "$TURBO_ROOT$/packages/*/package.json"
      ]
    },
    "check:all": {
      "dependsOn": ["//#knip", "build", "test", "//#lint", "//#check:prettier"]
    },
    "check:ai": {
      "dependsOn": [
        "//#knip",
        "build",
        "//#test:changed",
        "//#lint:changed",
        "//#check:prettier"
      ]
    },
    "ts:coverage": {
      "dependsOn": ["^ts:coverage"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "$TURBO_ROOT$/packages/*/tsconfig.json",
        "$TURBO_ROOT$/package.json"
      ],
      "outputs": ["coverage-ts/**"]
    }
  }
}
