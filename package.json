{
  "name": "gitterdun-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:web": "npm run dev --workspace=packages/web",
    "build": "turbo run build",
    "build:api": "npm run build --workspace=packages/api",
    "build:web": "npm run build --workspace=packages/web",
    "start": "npm run start --workspace=packages/api",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:changed": "jest --onlyChanged",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "type-check": "turbo run type-check",
    "find-unused-eslint-rules": "eslint-find-rules --unused eslint.config.mjs --flatConfig",
    "depcheck": "node scripts/check-deps.js",
    "ci:check": "turbo run ci:check"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^9.2.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.2.0",
    "eslint-find-rules": "^5.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.0.0-rc.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "husky": "^9.1.6",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-sql": "^0.19.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-jest": "^29.4.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write",
      "eslint --fix --no-warn-ignored"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@10.2.4",
  "dependencies": {
    "@jest/globals": "^30.0.5"
  }
}
