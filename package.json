{
  "name": "gitterdun-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:api": "npm run build --workspace=packages/api",
    "build:web": "npm run build --workspace=packages/web",
    "build": "turbo run build --output-logs=errors-only",
    "check:ts:coverage": "NODE_ENV=production typescript-coverage-report",
    "check:ai": "turbo run check:ai --output-logs=errors-only",
    "check:all": "turbo run check:all --output-logs=errors-only",
    "check:prettier": "node --experimental-strip-types node_modules/prettier/bin/prettier.cjs --check .",
    "check:types": "turbo run check:types --output-logs=errors-only",
    "check:jscpd": "jscpd",
    "ci:install:browsers": "npm run install:browsers --workspace=packages/e2e -- --with-deps chromium",
    "db:reset:seed": "npm run -w packages/api db:reset -- --seed",
    "db:reset": "npm run -w packages/api db:reset",
    "install:browsers": "npm run install --workspace=packages/e2e",
    "knip": "knip",
    "lint-staged": "NODE_OPTIONS='--experimental-strip-types' lint-staged",
    "lint:changed": "(git diff --name-only HEAD --diff-filter=AM && git ls-files --others --exclude-standard) | grep -E \"\\.(ts|tsx|js|jsx)$\" | sort -u | xargs -r eslint",
    "lint": "NODE_OPTIONS='--experimental-strip-types' eslint .",
    "prettier:fix": "node --experimental-strip-types node_modules/prettier/bin/prettier.cjs --write .",
    "start:dev:api": "npm run start:dev --workspace=packages/api",
    "start:dev:web": "npm run start:dev --workspace=packages/web",
    "start:dev": "turbo run start:dev --log-prefix=none",
    "start": "npm run start --workspace=packages/api",
    "test:changed": "jest --onlyChanged",
    "test:e2e:debug": "npm run test:debug --workspace=packages/e2e",
    "test:e2e:ui": "npm run test:ui --workspace=packages/e2e",
    "test:e2e": "npm test --workspace=packages/e2e",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "turbo:reset": "find . -name '.turbo' -type d -exec rm -rf {}",
    "validate-eslint-config": "tsx ./scripts/validate-eslint-config.ts"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "6.0.0-rc.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.6.6",
    "eslint-plugin-turbo": "^2.5.6",
    "eslint-plugin-ui-testing": "^2.0.1",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jscpd": "^4.0.5",
    "knip": "^5.62.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.5.0",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-sql": "^0.19.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "semantic-ui-react": "^2.1.5",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "typescript-coverage-report": "^1.1.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,md,json,yml,yaml,sql}": [
      "eslint --fix --no-warn-ignored",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "packageManager": "npm@10.2.4",
  "dependencies": {
    "eslint-plugin-gitterdun": "^0.1.0"
  },
  "overrides": {
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "typeCoverage": {
    "atLeast": 99,
    "cache": true,
    "detail": true,
    "ignoreFiles": [
      "**/scripts/**",
      "**/dist/**",
      "**/build/**",
      "**/bundle/**",
      "**/test/**",
      "**/tests/**",
      "**/__test__/**",
      "**/__tests__/**",
      "**/*.test.*",
      "**/*.config.*",
      "**/jest.*",
      "**/eslint-plugin-*/**",
      "**/coverage-ts/**"
    ],
    "strict": true
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/coverage/**",
      "**/dist/**",
      "**/build/**",
      "**/bundle/**",
      "**/.type-coverage/**",
      "**/coverage-ts/**",
      "**/*.json",
      "**/*.yml",
      "**/*.yaml",
      "**/*.sql",
      "**/*.{test,spec}.*",
      "**/{test,tests,__test__,__tests__}/**",
      "**/i18n/messages/**"
    ],
    "mode": "strict",
    "gitignore": true
  }
}
