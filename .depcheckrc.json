{
  "ignoreMatches": [
    "@jest/globals",
    "@types/*",
    "jest*",
    "ts-jest",
    "typescript",
    "eslint*",
    "prettier*",
    "@vitejs/plugin-react",
    "vite",
    "autoprefixer",
    "postcss",
    "tailwindcss",
    "@tailwindcss/postcss",
    "nodemon",
    "tsx",
    "pino-pretty",
    "turbo",
    "concurrently",
    "husky",
    "lint-staged",
    "@babel/plugin-transform-react-jsx",
    "@testing-library/*",
    "jest-environment-jsdom",
    "depcheck"
  ],
  "ignorePatterns": [
    "dist/**",
    "coverage/**",
    "node_modules/**",
    "*.test.*",
    "*.spec.*",
    "*.demo.*",
    "jest.config.*",
    "jest.setup.*",
    "tailwind.config.*",
    "vite.config.*",
    "eslint.config.*",
    "prettier.config.*",
    "postcss.config.*",
    "turbo.json",
    ".husky/**",
    "*.log",
    "*.db*",
    "*.tsbuildinfo",
    "*.html",
    "**/*.html",
    "*/index.html",
    "*.css",
    "*.sql",
    "package.json",
    "tsconfig*.json"
  ],
  "specials": ["eslint", "jest", "tailwindcss", "vite", "typescript"],
  "skipMissing": true
}
