{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/*.d.ts",
    "jest.setup.ts",
    "jest.setupAfterEnv.ts"
  ],
  "exclude": ["node_modules", "**/dist", "**/build"]
}
