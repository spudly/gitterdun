{
  "name": "@gitterdun/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "playwright test",
    "test:dev": "playwright test --ui",
    "test:webserver": "VITE_COVERAGE=${VITE_COVERAGE:-false} vite",
    "test:install": "playwright install --with-deps",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report; open coverage/lcov-report/index.html",
    "test:coverage": "nyc report --reporter=lcov --reporter=text-summary && nyc check-coverage --lines=100 --functions=100 --branches=100 --statements=100",
    "test:ci": "VITE_COVERAGE=true playwright test && nyc report --reporter=lcov --reporter=text-summary && nyc check-coverage --lines=100 --functions=100 --branches=100 --statements=100"
  },
  "dependencies": {
    "@gitterdun/shared": "file:../shared",
    "@tanstack/react-query": "^5.85.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@playwright/test": "^1.47.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "babel-plugin-istanbul": "^6.1.1",
    "nyc": "^15.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.6.3",
    "vite": "^4.5.14",
    "vite-plugin-istanbul": "^7.1.0"
  }
}
