{
  "name": "@gitterdun/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start:dev": "vite",
    "check:ts": "tsc",
    "prebuild": "npm run i18n:extract",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pretest": "rm -rf coverage",
    "test": "jest",
    "i18n:extract:raw": "formatjs extract 'src/**/*.{ts,tsx}' --ignore 'src/**/*.d.ts' --extract-source-location --out-file src/i18n/extracted/_raw.json",
    "i18n:postprocess": "node scripts/i18n-postprocess.mjs src/i18n/extracted/_raw.json src/i18n/extracted/en.json",
    "i18n:extract": "npm run i18n:extract:raw && npm run i18n:postprocess",
    "test:dev": "jest --watch"
  },
  "dependencies": {
    "@gitterdun/shared": "file:../shared",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "clsx": "^2.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-intl": "^7.1.11",
    "react-router-dom": "^7.8.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@formatjs/cli": "^6.7.2",
    "@jest/globals": "^30.0.5",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.5",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-formatjs": "^10.5.16",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.6.3",
    "vite": "^7.1.2"
  }
}
