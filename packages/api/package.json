{
  "name": "@gitterdun/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.tsx",
    "prebuild": "rm -rf dist; rm -f tsconfig.build.tsbuildinfo",
    "type-check": "tsc",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "lint": "eslint --max-warnings 0 src/**/*.ts",
    "test": "jest",
    "test:dev": "jest --watch"
  },
  "dependencies": {
    "@gitterdun/shared": "file:../shared",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^10.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^8.0.0",
    "pino": "^9.0.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "nock": "^14.0.10",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.6.3"
  }
}
